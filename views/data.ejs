          <div class="tablefixed">
            <table class="table" style="margin: 0;">
              <thead >
                  <tr>
                      <th>S.No</th>
                      <th>Date</th>
                      <th>Index</th>
                      <th>LOT</th>
                      <th>PE/CE</th>
                      <th>Strike Price</th>
                      <th>Buy</th>
                      <th>Sell</th>
                      <th>P&L</th>
                      <th>Delete</th>
                  </tr>
              </thead>
              <tbody >
                <% for(var i=0; i < data.length; i++) { %>
                  <%if(data[i].price>0){%>
                    <tr style="background-color: rgb(165, 245, 165);" id="<%=i+1%>">
                      <td><%= i+1 %></td>
                      <td class="date"><%= data[i].date %></td>
                      <td><%= data[i].index %></td>
                      <td><%= data[i].lot %></td>
                      <td><%= data[i].ratio %></td>
                      <td><%= data[i].stPrice %></td>
                      <td><%= data[i].buy %></td>
                      <td><%= data[i].sell %></td>
                      <td class="price"><%= data[i].price %></td>
                      <td><button class="btn btn-outline-danger" onclick="deleteEntry(<%= JSON.stringify(data[i]._id)%>)"><i class="fa fa-trash"></i></button></td>
                    </tr>
                  <%}else if(data[i].price<=0){%>
                    <tr style="background-color: rgb(241, 185, 185);" id="<%=i+1%>">
                      <td><%= i+1 %></td>
                      <td class="date"><%= data[i].date %></td>
                      <td><%= data[i].index %></td>
                      <td><%= data[i].lot %></td>
                      <td><%= data[i].ratio %></td>
                      <td><%= data[i].stPrice %></td>
                      <td><%= data[i].buy %></td>
                      <td><%= data[i].sell %></td>
                      <td class="price"><%= data[i].price %></td>
                      <td><button class="btn btn-outline-danger" onclick="deleteEntry(<%= JSON.stringify(data[i]._id)%>)"><i class="fa fa-trash"></i></button></td>
                    </tr>
                  <%}%>
               <% } %>
              </tbody>
            </table>
